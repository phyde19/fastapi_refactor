# --------------------------------------------------
# Compass Hub runtime
# --------------------------------------------------
COMPASS_ENV="DEV"
API_NAME="Compass API (Refactor)"
ENFORCE_ROLE_CHECKS="true"

# DEV-only source switch
PLUGIN_REGISTRY_SOURCE="overlay"   # local | databricks | overlay
PLUGIN_SERVICES_LOCAL_FILE="./services.local.json"
PLUGIN_REGISTRY_LOCAL_FILE="./plugins.local.json"

# Redis
REDIS_HOST="127.0.0.1"
REDIS_SESSION_DB=0
REDIS_PLUGIN_CACHE_DB=1

# Databricks
DATABRICKS_WORKSPACE_URL=""
DATABRICKS_HTTP_PATH=""
DATABRICKS_TOKEN=""
DATABRICKS_PLUGINS_TABLE="devctzndsa.compass.plugin_registry"

# Chat proxy behavior
PLUGIN_STREAM_CONNECT_TIMEOUT_SECONDS=10

# Port offset for shared VM (each developer picks a unique offset)
PORT_OFFSET=0

# Derived from PORT_OFFSET by scripts (do not set here):
#   REDIS_PORT        = 6000 + PORT_OFFSET
#   BACKEND_PORT      = 8000 + PORT_OFFSET
#   FRONTEND_PORT     = 3000 + PORT_OFFSET
#   FRONTEND_URL      = http://localhost:$FRONTEND_PORT
#   NEXT_PUBLIC_COMPASS_API_BASE_URL = http://localhost:$BACKEND_PORT
